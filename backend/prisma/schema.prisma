generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DroneStatus {
  IDLE
  CARREGANDO
  EM_VOO
  ENTREGANDO
  RETORNANDO
  MANUTENCAO
}

model Drone {
  id         Int         @id @default(autoincrement())
  nome       String
  capacidade Int
  bateria    Int         @default(100)
  status     DroneStatus @default(IDLE)
  entregas   Entrega[]
}

model Pedido {
  id         Int      @id @default(autoincrement())
  x          Int
  y          Int
  peso       Float
  prioridade Int
  entregue   Boolean  @default(false)
  entrega    Entrega?
}

model Entrega {
  id       Int       @id @default(autoincrement())
  droneId  Int
  pedidoId Int       @unique
  inicio   DateTime  @default(now())
  fim      DateTime?

  drone  Drone  @relation(fields: [droneId], references: [id])
  pedido Pedido @relation(fields: [pedidoId], references: [id])
}

model Obstaculo {
  id Int @id @default(autoincrement())
  x  Int
  y  Int
}
